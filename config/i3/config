bindsym $mod+Print exec scrot '%F--%I:%M:%S:%p--$wx$h--window.png' -ue 'mv $f /home/edgar/Pictures/Screenshots' && sleep 1 && exec notify-send 'screenshot has been saved to ~/Pictures/Screenshots'
