#!/bin/sh

SYMLINK_NAME="nvidia-gpu"
RULE_PATH="/etc/udev/rules.d/nvidia-dgpu-dev-path.rules"
AMD_IGPU_ID=$(lspci -d ::03xx | grep 'NVIDIA' | cut -f1 -d' ')
UDEV_RULE="$(
  cat <<EOF
KERNEL=="card*", \
KERNELS=="0000:$AMD_IGPU_ID", \
SUBSYSTEM=="drm", \
SUBSYSTEMS=="pci", \
SYMLINK+="dri/$SYMLINK_NAME"
EOF
)"

echo "$UDEV_RULE" | sudo tee "$RULE_PATH"

SYMLINK_NAME="intel-igpu"
RULE_PATH="/etc/udev/rules.d/intel-igpu-dev-path.rules"

# Get the PCI ID of the Intel GPU (class 0300 = VGA controller)
INTEL_IGPU_ID=$(lspci -d ::03xx | grep 'Intel' | cut -f1 -d' ')

UDEV_RULE="$(
  cat <<EOF
KERNEL=="card*", \
KERNELS=="0000:$INTEL_IGPU_ID", \
SUBSYSTEM=="drm", \
SUBSYSTEMS=="pci", \
SYMLINK+="dri/$SYMLINK_NAME"
EOF
)"

echo "$UDEV_RULE" | sudo tee "$RULE_PATH"
